
<html>
<head>
  <title>Car Bids</title>
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
  
  <header>
    <nav class="navbar navbar-expand navbar-dark bg-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">Car Bidz</a>
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="#">Logout</a>
          </li>
        </ul>
      </div>
    </nav>
  </header>

  <div class="container mt-4">
    <div class="row">
      <!-- Sidebar -->
      <div class="col-md-3">
        <div class="dropdown">
          <button class="btn btn-primary dropdown-toggle" type="button" id="searchByDropdown" data-bs-toggle="dropdown" aria-expanded="false">
            Search by:
          </button>
          <ul class="dropdown-menu" aria-labelledby="searchByDropdown">
            <li><a class="dropdown-item" href="#">Make</a></li>
            <li><a class="dropdown-item" href="#">Model</a></li>
            <li><a class="dropdown-item" href="#">Year</a></li>
          </ul>
        </div>
      </div>

      <!-- Cards -->
      <div class="col-md-9">
        <div class="row">
          <!-- Card Template w/ Handlebars -->
          {{#each cars}}
          <div class="col-md-4 mb-4">
            <div class="card">
              <div class="card-body">
                <h5 class="card-make">Make: {{make}}</h5>
                <p class="card-model">Model: {{model}}</p>
                <p class="card-year">Year: {{year}}</p>
                <p class="card-price">Price: {{price}}</p>
                <button class="btn btn-primary">Make Bid</button>
              </div>
            </div>
          </div>
          {{/each}}
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>