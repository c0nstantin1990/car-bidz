<div class="row">
  <div class="col-auto">
    <h2>Welcome back, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Post New Item</h3>

    <form class="form new-item-form">
      <div class="form-group">
        <label for="item-name"></label>
        <input class="form-input" type="text" id="item-name" name="item-name" />
      </div>
      <div class="form-group">
        <label for="item-price">($):</label>
        <input class="form-input" type="number" id="item-price" name="item price" />
      </div>
      <div class="form-group">
        <label for="car-make"></label>
        <textarea class="form-input" id="car-make" name="car-make"></textarea>
      </div>
      <div class="form-group">
        <label for="car-model"></label>
        <textarea class="form-input" id="car-model" name="car-model"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Materialize Item</button>
      </div>
    </form>
  </div>

  {{#if item.length}}
  <div class="col-md-6 item-list">
    <h3>Items Up For Bid:</h3>

    {{#each item as |item|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/item/{{item.id}}">{{item.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm " data-id="{{item.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>
